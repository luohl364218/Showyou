<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.zju.campustour">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".view.application.CampusTourApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".view.activity.SplashActivity"
            android:theme="@style/WelcomeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.WelcomeGuideActivity"
            android:theme="@style/WelcomeNoActionBar">
        </activity>
        <activity
            android:name=".view.activity.InfoWebActivity"
            android:theme="@style/WelcomeNoActionBar">
        </activity>
        <activity
            android:name=".view.activity.MajorListActivity"
            android:theme="@style/WelcomeNoActionBar">
        </activity>
        <activity
            android:name=".view.activity.MajorProviderInfoActivity"
            android:theme="@style/WelcomeNoActionBar">
        </activity>
        <activity android:name=".view.activity.ProviderHomePageActivity"
                  android:theme="@style/WelcomeNoActionBar">
        </activity>
    </application>

</manifest>