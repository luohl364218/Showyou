<?xml version="1.0" encoding="utf-8"?>
<com.zju.campustour.view.chatting.FriendInfoView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friend_info_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/friend_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@mipmap/icon_return"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="校友信息"/>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/friend_avatar_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <com.zju.campustour.view.chatting.widget.CircleImageView
                        android:id="@+id/friend_detail_avatar"
                        android:layout_width="@dimen/login_regist_head_icon_size"
                        android:layout_height="@dimen/login_regist_head_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/jmui_head_icon" />

                    <TextView
                        android:id="@+id/nick_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/name_ll"
                style="@style/MeItemStyle">

                <ImageView
                    android:id="@+id/note_name_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/note_info" />

                <TextView
                    style="@style/info_left_txt_style"
                    android:text="@string/note_name" />

                <TextView
                    android:id="@+id/note_name_tv"
                    style="@style/info_right_txt_style"
                    android:ems="10" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/me_split_line_color"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/birthday"
                style="@style/MeItemStyle"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/birthday" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="@string/birthday"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/birthday_show"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="1992-1-1"
                    android:textColor="#808080" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/me_split_line_color" />

            <LinearLayout
                android:id="@+id/sex"
                style="@style/MeItemStyle">

                <ImageView
                    android:id="@+id/gender_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sex_man" />

                <TextView
                    style="@style/info_left_txt_style"
                    android:text="@string/sex" />

                <TextView
                    android:id="@+id/gender_tv"
                    style="@style/info_right_txt_style"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/me_split_line_color" />

            <LinearLayout
                android:id="@+id/location"
                style="@style/MeItemStyle">

                <ImageView
                    android:id="@+id/region_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/area" />

                <TextView
                    style="@style/info_left_txt_style"
                    android:layout_toRightOf="@+id/region_iv"
                    android:text="@string/area" />

                <TextView
                    android:id="@+id/region_tv"
                    style="@style/info_right_txt_style" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/me_split_line_color" />

            <LinearLayout
                android:id="@+id/sign"
                style="@style/MeItemStyle">

                <ImageView
                    android:id="@+id/signature_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/sign" />

                <TextView
                    style="@style/info_left_txt_style"
                    android:text="@string/sign" />

                <TextView
                    android:id="@+id/signature_tv"
                    style="@style/info_right_txt_style"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/me_split_line_color" />

            <RelativeLayout
                android:id="@+id/no_disturb_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp">

                <ImageView
                    android:id="@+id/no_disturb_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/no_disturb" />

                <TextView
                    style="@style/info_left_txt_style"
                    android:text="@string/set_do_not_disturb"
                    android:layout_toRightOf="@+id/no_disturb_icon"/>

                <com.zju.campustour.view.chatting.widget.SlipButton
                    android:id="@+id/no_disturb_slip_btn"
                    android:layout_width="82dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/me_split_line_color" />

            <RelativeLayout
                android:id="@+id/add_to_black_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp">

                <ImageView
                    android:id="@+id/black_list_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/black_list" />

                <TextView
                    style="@style/info_left_txt_style"
                    android:text="@string/add_to_blacklist"
                    android:layout_toRightOf="@+id/black_list_icon"/>

                <com.zju.campustour.view.chatting.widget.SlipButton
                    android:id="@+id/black_list_slip_btn"
                    android:layout_width="82dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/me_split_line_color" />

            <Button
                android:id="@+id/friend_send_msg_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="@string/send_message"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_size"/>

            <Button
                android:id="@+id/delete_friend_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:background="@drawable/chat_detail_btn_bg"
                android:text="@string/friend_opt_delete"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_size"/>
        </LinearLayout>


    </ScrollView>

</com.zju.campustour.view.chatting.FriendInfoView>
