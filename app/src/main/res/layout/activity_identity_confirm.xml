<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="com.zju.campustour.view.activity.IdentityConfirmActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/fragment_search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/jmui_jpush_blue"
            app:layout_scrollFlags="scroll|enterAlways|snap">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/fragment_search_title_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="190dp"
                    android:singleLine="true"
                    android:text="请选择您的身份"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/fragment_search_title_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>



        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="不同的身份将拥有不同的权限"
            android:textColor="@color/alpha_85_white"
            android:textSize="@dimen/text_default_size"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/id_college_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/selector_identity_confirm"
                    android:text="在校大学生"
                    android:textColor="@color/selector_btn_identify"
                    android:textSize="@dimen/text_normal_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="在读的本科生 硕士研究生 博士研究生 需完善相关信息"
                    android:textColor="@color/alpha_85_white"
                    android:textSize="@dimen/text_default_size"/>

                <Button
                    android:id="@+id/id_school_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_identity_confirm"
                    android:text="中小学生"
                    android:textColor="@color/selector_btn_identify"
                    android:textSize="@dimen/text_normal_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="在读的小学生 初中生 高中生 需完善相关信息"
                    android:textColor="@color/alpha_85_white"
                    android:textSize="@dimen/text_default_size"/>

                <Button
                    android:id="@+id/id_look_around"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_identity_confirm"
                    android:text="围观群众"
                    android:textColor="@color/selector_btn_identify"
                    android:textSize="@dimen/text_normal_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="快速进入校游尝鲜 跳过繁琐信息填写 后面再完善"
                    android:textColor="@color/alpha_85_white"
                    android:textSize="@dimen/text_default_size"/>

                <Button
                    android:id="@+id/id_graduate_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_identity_confirm"
                    android:text="毕业大学生"
                    android:textColor="@color/selector_btn_identify"
                    android:textSize="@dimen/text_normal_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="已经就业 获取本科及以上学历"
                    android:textColor="@color/alpha_85_white"
                    android:textSize="@dimen/text_default_size"/>

                <Button
                    android:id="@+id/id_school_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_identity_confirm"
                    android:text="在校老师"
                    android:textColor="@color/selector_btn_identify"
                    android:textSize="@dimen/text_normal_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="在小学 初中 高中 大学从事教育相关工作"
                    android:textColor="@color/alpha_85_white"
                    android:textSize="@dimen/text_default_size"/>

                <Button
                    android:id="@+id/id_student_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_identity_confirm"
                    android:text="学生家长"
                    android:textColor="@color/selector_btn_identify"
                    android:textSize="@dimen/text_normal_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="家里有正在上学的孩子 对校游感兴趣"
                    android:textColor="@color/alpha_85_white"
                    android:textSize="@dimen/text_default_size"/>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linearlayout_gradient"
            android:orientation="vertical"
            android:padding="15dp">


            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_identity_btn_next"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal_size"/>
        </LinearLayout>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
