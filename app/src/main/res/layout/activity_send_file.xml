<?xml version="1.0" encoding="utf-8"?>
<com.zju.campustour.view.chatting.SendFileView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/send_file_view"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/menu_title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">


        <ImageButton
            android:id="@+id/return_btn"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/icon_return"
            android:background="@drawable/jmui_back_btn_bg"/>

        <TextView
            android:id="@+id/jmui_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择文件"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/jmui_commit_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="@string/save"
            android:textSize="@dimen/text_medium_size"
            android:textColor="#FFFFFF"
            android:background="@drawable/jmui_back_btn_bg"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/action_bar_ll"
        android:layout_below="@id/menu_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/actionbar_file_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/document"
                android:textColor="@color/send_file_action_bar"
                android:paddingTop="10dp"
                android:background="#ffffff"/>

            <ImageView
                android:id="@+id/slipping_1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/slipping"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/actionbar_video_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/jmui_video"
                android:textColor="@color/send_file_action_bar"
                android:paddingTop="10dp"
                android:background="#ffffff"/>

            <ImageView
                android:id="@+id/slipping_2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/slipping"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/actionbar_album_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/album"
                android:textColor="@color/send_file_action_bar"
                android:paddingTop="10dp"
                android:background="#ffffff"/>

            <ImageView
                android:id="@+id/slipping_3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/slipping"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/actionbar_audio_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/audio"
                android:textColor="@color/send_file_action_bar"
                android:paddingTop="10dp"
                android:background="#ffffff"/>

            <ImageView
                android:id="@+id/slipping_4"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/slipping"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/actionbar_other_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/other"
                android:textColor="@color/send_file_action_bar"
                android:paddingTop="10dp"
                android:background="#ffffff"/>

            <ImageView
                android:id="@+id/slipping_5"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/slipping"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

    <com.zju.campustour.view.chatting.ScrollControlViewPager
        android:id="@+id/viewpager"
        android:layout_above="@+id/send_file_rl"
        android:layout_below="@+id/action_bar_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.zju.campustour.view.chatting.ScrollControlViewPager>

    <RelativeLayout
        android:id="@+id/send_file_rl"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
        android:background="#444444">

        <TextView
            android:id="@+id/size_desc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/send_file_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_alignParentRight="true"
            android:textColor="#d4d4d4"
            android:text="@string/jmui_send"
            android:textSize="16sp"
            android:background="@drawable/send_file_btn_bg"/>

    </RelativeLayout>


</com.zju.campustour.view.chatting.SendFileView>
