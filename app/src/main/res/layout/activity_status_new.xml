<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zju.campustour.view.activity.StatusNewActivity">

    <RelativeLayout
        android:id="@+id/menu_title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">


        <ImageButton
            android:id="@+id/return_btn"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/icon_return"
            android:background="@drawable/jmui_back_btn_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新动态"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/publish_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="发布"
            android:textSize="@dimen/text_medium_size"
            android:textColor="@color/alpha_60_white"
            android:background="@drawable/jmui_back_btn_bg"/>
    </RelativeLayout>


    <EditText
        android:id="@+id/new_status_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:cursorVisible="true"
        android:textSize="16sp"
        android:background="@null"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:textColor="@color/alpha_70_black"
        android:hint="分享你的校园趣事和达人吧"
        android:textColorHint="@color/me_info_hint_color">

        <requestFocus />
    </EditText>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/new_status_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        fresco:placeholderImage="@mipmap/jmui_take_photo_black"
        fresco:placeholderImageScaleType="fitCenter"

        />





</LinearLayout>
