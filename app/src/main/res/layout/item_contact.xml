<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <!-- 联系人信息 -->
    <com.zju.campustour.view.chatting.widget.CircleImageView
        android:id="@+id/head_icon_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/jmui_head_icon" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/head_icon_iv"
        android:maxLines="1"
        android:text="@string/username_hit"
        android:textSize="15sp"
        android:textColor="@color/alpha_60_black"/>

    </RelativeLayout>


</LinearLayout>