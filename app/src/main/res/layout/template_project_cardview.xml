<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="10dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/cardview_project_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cardview_project_user_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                fresco:failureImage="@mipmap/nav_boy_user"
                fresco:failureImageScaleType="centerInside"
                fresco:roundAsCircle="true"
                fresco:roundedCornerRadius="1dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="6"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/cardview_project_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="一句话业务描述"
                        android:textColor="@color/alpha_70_black"
                        android:textSize="18sp"
                        />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_time"/>

                    <TextView
                        android:id="@+id/cardview_project_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="2017-5-10"
                        android:textColor="@color/alpha_40_black"
                        android:textSize="15sp"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_person_num"/>

                    <TextView
                        android:id="@+id/cardview_project_accept_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="上限10人"
                        android:textColor="@color/alpha_40_black"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardview_project_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/alpha_70_black"
                android:padding="5dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="中国人民大学税收学大四学生，校团委骨干人才。爱旅游、爱发呆、爱思考，喜欢阅读中外文学经典。博古通今、善思明辨。一花一世界，一叶一菩提。熟知中国人民大学历史上风云人物典故，被戏称为“行走中的校史馆”。"
                android:background="@drawable/textview_shape"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cardview_project_img"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                fresco:failureImage="@drawable/project_default"
                fresco:failureImageScaleType="centerInside"

                />

            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_favor"/>

                    <TextView
                        android:id="@+id/cardview_project_favor_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="60人收藏"
                        android:textColor="@color/alpha_40_black"
                        android:textSize="15sp"
                        />

                </LinearLayout>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_price"/>

                        <TextView
                            android:id="@+id/cardview_project_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="200元/人"
                            android:textColor="@color/alpha_40_black"
                            android:textSize="15sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_enroll_in"/>

                    <TextView
                        android:id="@+id/cardview_project_join"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="8人报名"
                        android:textColor="@color/alpha_40_black"
                        android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>